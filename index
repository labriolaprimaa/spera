<body>
    <div class="game-container">
        <h1>üèÉ Campionato di Atletica üèÉ</h1>
        
        <div id="menu" class="menu">
            <p style="margin: 20px 0; font-size: 1.1em;">Scegli la tua disciplina:</p>
            <button onclick="startGame('sprint')">üèÉ 100m Sprint</button>
            <button onclick="startGame('hurdles')">üöß 110m Ostacoli</button>
            <button onclick="startGame('javelin')">üéØ Lancio del Giavellotto</button>
        </div>

        <!-- 100m Sprint -->
        <div id="sprint-game" class="game-area">
            <div class="instructions">
                <strong>Istruzioni:</strong> Premi ripetutamente SPAZIO il pi√π velocemente possibile per correre!
            </div>
            <div class="stats">
                <div class="stat-item">‚è±Ô∏è Tempo: <span id="sprint-time">0.00</span>s</div>
                <div class="stat-item">üìè Distanza: <span id="sprint-distance">0</span>m</div>
            </div>
            <div class="track">
                <div class="lane">
                    <div class="runner" id="player-runner">üèÉ</div>
                </div>
                <div class="lane">
                    <div class="runner opponent" id="opponent1">ü§ñ</div>
                </div>
                <div class="lane">
                    <div class="runner opponent" id="opponent2">ü§ñ</div>
                </div>
            </div>
            <div class="button-row">
                <button class="action-btn" id="sprint-start" onclick="startSprint()">Inizia Gara!</button>
            </div>
            <div id="sprint-results" class="results" style="display: none;"></div>
            <button class="back-btn" onclick="backToMenu()">‚Üê Torna al Menu</button>
        </div>

        <!-- 110m Hurdles -->
        <div id="hurdles-game" class="game-area">
            <div class="instructions">
                <strong>Istruzioni:</strong> Premi SPAZIO per correre e premi quando sei vicino agli ostacoli per saltare!
            </div>
            <div class="stats">
                <div class="stat-item">‚è±Ô∏è Tempo: <span id="hurdles-time">0.00</span>s</div>
                <div class="stat-item">üöß Ostacoli: <span id="hurdles-count">0</span>/10</div>
            </div>
            <div class="track hurdle-track" id="hurdles-track">
                <div class="lane">
                    <div class="runner" id="hurdles-runner">üèÉ</div>
                </div>
            </div>
            <div class="button-row">
                <button class="action-btn" id="hurdles-start" onclick="startHurdles()">Inizia Gara!</button>
            </div>
            <div id="hurdles-results" class="results" style="display: none;"></div>
            <button class="back-btn" onclick="backToMenu()">‚Üê Torna al Menu</button>
        </div>

        <!-- Javelin Throw -->
        <div id="javelin-game" class="game-area">
            <div class="instructions">
                <strong>Istruzioni:</strong> Premi SPAZIO per caricare la potenza, rilascia per lanciare!
            </div>
            <div class="stats">
                <div class="stat-item">üéØ Miglior lancio: <span id="best-throw">0.0</span>m</div>
                <div class="stat-item">üìä Tentativi: <span id="attempts">3</span></div>
            </div>
            <div class="power-bar">
                <div class="power-fill" id="power-fill"></div>
            </div>
            <div id="javelin-area">
                <div class="athlete" id="javelin-athlete">üèÉ</div>
            </div>
            <div class="button-row">
                <button class="action-btn" id="javelin-throw" onclick="prepareThrow()">Preparati a Lanciare!</button>
            </div>
            <div id="javelin-results" class="results" style="display: none;"></div>
            <button class="back-btn" onclick="backToMenu()">‚Üê Torna al Menu</button>
        </div>
    </div>

    <script>
        let currentGame = null;
        let gameActive = false;

        // Sprint variables
        let sprintStartTime = 0;
        let sprintDistance = 0;
        let sprintInterval = null;
        let opponentSpeeds = [];

        // Hurdles variables
        let hurdlesStartTime = 0;
        let hurdlesDistance = 0;
        let hurdlesCleared = 0;
        let hurdlesArray = [];
        let hurdlesInterval = null;
        let isJumping = false;

        // Javelin variables
        let javelinPower = 0;
        let javelinCharging = false;
        let javelinInterval = null;
        let bestThrow = 0;
        let attemptsLeft = 3;

        function startGame(game) {
            document.getElementById('menu').style.display = 'none';
            document.getElementById(game + '-game').style.display = 'block';
            currentGame = game;
            resetGame(game);
        }

        function backToMenu() {
            document.querySelectorAll('.game-area').forEach(area => area.style.display = 'none');
            document.getElementById('menu').style.display = 'block';
            gameActive = false;
            clearInterval(sprintInterval);
            clearInterval(hurdlesInterval);
            clearInterval(javelinInterval);
        }

        function resetGame(game) {
            if (game === 'sprint') {
                sprintDistance = 0;
                document.getElementById('player-runner').style.left = '0px';
                document.getElementById('opponent1').style.left = '0px';
                document.getElementById('opponent2').style.left = '0px';
                document.getElementById('sprint-time').textContent = '0.00';
                document.getElementById('sprint-distance').textContent = '0';
                document.getElementById('sprint-results').style.display = 'none';
                document.getElementById('sprint-start').disabled = false;
            } else if (game === 'hurdles') {
                hurdlesDistance = 0;
                hurdlesCleared = 0;
                document.getElementById('hurdles-runner').style.left = '0px';
                document.getElementById('hurdles-time').textContent = '0.00';
                document.getElementById('hurdles-count').textContent = '0';
                document.getElementById('hurdles-results').style.display = 'none';
                document.getElementById('hurdles-start').disabled = false;
                createHurdles();
            } else if (game === 'javelin') {
                bestThrow = 0;
                attemptsLeft = 3;
                document.getElementById('best-throw').textContent = '0.0';
                document.getElementById('attempts').textContent = '3';
                document.getElementById('javelin-results').style.display = 'none';
                document.getElementById('javelin-throw').disabled = false;
                clearJavelins();
            }
        }

        // SPRINT GAME
        function startSprint() {
            gameActive = true;
            sprintStartTime = Date.now();
            sprintDistance = 0;
            document.getElementById('sprint-start').disabled = true;
            opponentSpeeds = [Math.random() * 2 + 3, Math.random() * 2 + 3];
            
            sprintInterval = setInterval(updateSprint, 50);
            
            document.addEventListener('keydown', sprintKeyPress);
        }

        function sprintKeyPress(e) {
            if (e.code === 'Space' && gameActive && currentGame === 'sprint') {
                e.preventDefault();
                sprintDistance += 3;
            }
        }

        function updateSprint() {
            if (!gameActive) return;

            const elapsed = (Date.now() - sprintStartTime) / 1000;
            document.getElementById('sprint-time').textContent = elapsed.toFixed(2);
            document.getElementById('sprint-distance').textContent = Math.floor(sprintDistance);

            const trackWidth = document.querySelector('.lane').offsetWidth - 40;
            const playerPos = Math.min((sprintDistance / 100) * trackWidth, trackWidth);
            document.getElementById('player-runner').style.left = playerPos + 'px';

            // Update opponents
            const opp1Dist = opponentSpeeds[0] * elapsed * 10;
            const opp2Dist = opponentSpeeds[1] * elapsed * 10;
            document.getElementById('opponent1').style.left = Math.min((opp1Dist / 100) * trackWidth, trackWidth) + 'px';
            document.getElementById('opponent2').style.left = Math.min((opp2Dist / 100) * trackWidth, trackWidth) + 'px';

            if (sprintDistance >= 100) {
                endSprint(elapsed, opp1Dist, opp2Dist);
            }
        }

        function endSprint(playerTime, opp1Dist, opp2Dist) {
            gameActive = false;
            clearInterval(sprintInterval);
            document.removeEventListener('keydown', sprintKeyPress);

            const opp1Time = playerTime * (100 / opp1Dist);
            const opp2Time = playerTime * (100 / opp2Dist);

            let position = 1;
            if (opp1Time < playerTime) position++;
            if (opp2Time < playerTime) position++;

            let medal = '';
            let message = '';
            if (position === 1) {
                medal = 'ü•á';
                message = 'ORO! Vittoria straordinaria!';
            } else if (position === 2) {
                medal = 'ü•à';
                message = 'ARGENTO! Ottima prestazione!';
            } else {
                medal = 'ü•â';
                message = 'BRONZO! Buon lavoro!';
            }

            document.getElementById('sprint-results').innerHTML = `
                <div class="medal">${medal}</div>
                <h2>${message}</h2>
                <p>Il tuo tempo: <strong>${playerTime.toFixed(2)}s</strong></p>
                <p>Avversario 1: ${opp1Time.toFixed(2)}s | Avversario 2: ${opp2Time.toFixed(2)}s</p>
            `;
            document.getElementById('sprint-results').style.display = 'block';
        }

        // HURDLES GAME
        function createHurdles() {
            const track = document.getElementById('hurdles-track');
            const existingHurdles = track.querySelectorAll('.hurdle');
            existingHurdles.forEach(h => h.remove());
            
            hurdlesArray = [];
            for (let i = 1; i <= 10; i++) {
                const hurdle = document.createElement('div');
                hurdle.className = 'hurdle';
                hurdle.style.left = (i * 60) + 'px';
                track.appendChild(hurdle);
                hurdlesArray.push({element: hurdle, cleared: false, position: i * 60});
            }
        }

        function startHurdles() {
            gameActive = true;
            hurdlesStartTime = Date.now();
            hurdlesDistance = 0;
            hurdlesCleared = 0;
            document.getElementById('hurdles-start').disabled = true;
            
            hurdlesInterval = setInterval(updateHurdles, 50);
            document.addEventListener('keydown', hurdlesKeyPress);
        }

        function hurdlesKeyPress(e) {
            if (e.code === 'Space' && gameActive && currentGame === 'hurdles') {
                e.preventDefault();
                if (!isJumping) {
                    hurdlesDistance += 2;
                    checkHurdleJump();
                }
            }
        }

        function checkHurdleJump() {
            const runner = document.getElementById('hurdles-runner');
            const runnerLeft = parseInt(runner.style.left) || 0;

            hurdlesArray.forEach(hurdle => {
                if (!hurdle.cleared && Math.abs(runnerLeft - hurdle.position) < 20) {
                    isJumping = true;
                    runner.style.transform = 'translateY(-20px)';
                    hurdle.cleared = true;
                    hurdlesCleared++;
                    document.getElementById('hurdles-count').textContent = hurdlesCleared;
                    
                    setTimeout(() => {
                        runner.style.transform = 'translateY(0)';
                        isJumping = false;
                    }, 300);
                }
            });
        }

        function updateHurdles() {
            if (!gameActive) return;

            const elapsed = (Date.now() - hurdlesStartTime) / 1000;
            document.getElementById('hurdles-time').textContent = elapsed.toFixed(2);

            const trackWidth = document.querySelector('.hurdle-track').offsetWidth - 40;
            const runnerPos = Math.min((hurdlesDistance / 110) * trackWidth, trackWidth);
            document.getElementById('hurdles-runner').style.left = runnerPos + 'px';

            if (hurdlesDistance >= 110) {
                endHurdles(elapsed);
            }
        }

        function endHurdles(time) {
            gameActive = false;
            clearInterval(hurdlesInterval);
            document.removeEventListener('keydown', hurdlesKeyPress);

            const penalty = (10 - hurdlesCleared) * 0.5;
            const finalTime = time + penalty;

            let message = '';
            if (hurdlesCleared === 10) {
                message = 'ü•á Perfetto! Tutti gli ostacoli superati!';
            } else if (hurdlesCleared >= 7) {
                message = 'ü•à Buona gara! Qualche ostacolo abbattuto.';
            } else {
                message = 'ü•â Devi allenarti di pi√π!';
            }

            document.getElementById('hurdles-results').innerHTML = `
                <h2>${message}</h2>
                <p>Tempo: <strong>${time.toFixed(2)}s</strong></p>
                <p>Ostacoli superati: <strong>${hurdlesCleared}/10</strong></p>
                <p>Penalit√†: <strong>+${penalty.toFixed(2)}s</strong></p>
                <p>Tempo finale: <strong>${finalTime.toFixed(2)}s</strong></p>
            `;
            document.getElementById('hurdles-results').style.display = 'block';
        }

        // JAVELIN GAME
        function clearJavelins() {
            const area = document.getElementById('javelin-area');
            const javelins = area.querySelectorAll('.javelin');
            javelins.forEach(j => j.remove());
            const markers = area.querySelectorAll('.distance-marker');
            markers.forEach(m => m.remove());
        }

        function prepareThrow() {
            if (attemptsLeft <= 0) return;
            
            javelinPower = 0;
            javelinCharging = true;
            document.getElementById('javelin-throw').disabled = true;
            document.getElementById('power-fill').style.width = '0%';
            
            javelinInterval = setInterval(() => {
                javelinPower += 2;
                if (javelinPower > 100) javelinPower = 0;
                document.getElementById('power-fill').style.width = javelinPower + '%';
            }, 50);
            
            document.addEventListener('keydown', javelinKeyPress);
            document.addEventListener('keyup', javelinKeyRelease);
        }

        function javelinKeyPress(e) {
            if (e.code === 'Space' && javelinCharging && currentGame === 'javelin') {
                e.preventDefault();
            }
        }

        function javelinKeyRelease(e) {
            if (e.code === 'Space' && javelinCharging && currentGame === 'javelin') {
                e.preventDefault();
                throwJavelin();
            }
        }

        function throwJavelin() {
            javelinCharging = false;
            clearInterval(javelinInterval);
            document.removeEventListener('keydown', javelinKeyPress);
            document.removeEventListener('keyup', javelinKeyRelease);

            const distance = (javelinPower / 100) * 90 + 10;
            const angle = 30 + (javelinPower / 100) * 15;

            animateJavelinThrow(distance, angle);

            if (distance > bestThrow) {
                bestThrow = distance;
                document.getElementById('best-throw').textContent = bestThrow.toFixed(1);
            }

            attemptsLeft--;
            document.getElementById('attempts').textContent = attemptsLeft;

            setTimeout(() => {
                if (attemptsLeft > 0) {
                    document.getElementById('javelin-throw').disabled = false;
                } else {
                    endJavelin();
                }
            }, 2000);
        }

        function animateJavelinThrow(distance, angle) {
            const area = document.getElementById('javelin-area');
            const javelin = document.createElement('div');
            javelin.className = 'javelin';
            javelin.style.left = '90px';
            javelin.style.bottom = '80px';
            javelin.style.transform = `rotate(-${angle}deg)`;
            area.appendChild(javelin);

            const landingX = 90 + distance * 3;
            
            let progress = 0;
            const animInterval = setInterval(() => {
                progress += 2;
                const x = 90 + (distance * 3 * progress / 100);
                const y = 80 + Math.sin(progress * Math.PI / 100) * 100;
                const rotation = -angle + (progress / 100) * (90 + angle);
                
                javelin.style.left = x + 'px';
                javelin.style.bottom = y + 'px';
                javelin.style.transform = `rotate(-${rotation}deg)`;
                
                if (progress >= 100) {
                    clearInterval(animInterval);
                    addDistanceMarker(landingX, distance);
                }
            }, 20);
        }

        function addDistanceMarker(x, distance) {
            const area = document.getElementById('javelin-area');
            const marker = document.createElement('div');
            marker.className = 'distance-marker';
            marker.style.left = x + 'px';
            marker.textContent = distance.toFixed(1) + 'm';
            area.appendChild(marker);
        }

        function endJavelin() {
            let message = '';
            let medal = '';
            if (bestThrow >= 70) {
                medal = 'ü•á';
                message = 'ORO! Lancio olimpionico!';
            } else if (bestThrow >= 50) {
                medal = 'ü•à';
                message = 'ARGENTO! Ottima tecnica!';
            } else {
                medal = 'ü•â';
                message = 'BRONZO! Continua ad allenarti!';
            }

            document.getElementById('javelin-results').innerHTML = `
                <div class="medal">${medal}</div>
                <h2>${message}</h2>
                <p>Miglior lancio: <strong>${bestThrow.toFixed(1)}m</strong></p>
            `;
            document.getElementById('javelin-results').style.display = 'block';
        }
    </script>
</body>
</html>
